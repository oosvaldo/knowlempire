.hide
	display  none
.menu 
	cursor 		pointer
	font-size 	2em
	color 		black
	text-align 	center
	& > [class^="menu-"]	
		display 	inline-block
		width		23%
	&-knowl
		background-color red
	&-map
		background-color green
	&-status
		background-color blue
		
.knowl
	text-align 	center
	& > div
		width 				100%
		height 				5em
		background-color	orange
		h3
			padding-top 0.5em
			font-size 	1.5em
			margin	 	0px
		span
			float			right
			font-size 		2em
			margin-right 	1.5em
			
.map
	position 			relative
	width				100%
	height				100%
	background-image	url('img/back.png')
	&-nav
		&-menu
			position 			relative 
			background-color	yellow
			top 				2.3em
			left 				7em
			border-radius		0px 10px 10px 0px
			height				4em
			width 				45%
			& > div	
				display 	inline-block
		&-info
			div
				display 			inline-block
				width			 	8em
				height			 	8em
				border-radius		50%
				background-color 	blue
				position			absolute
				z-index 			9
							
			span 
				position			absolute
				top		 	3.4em
				color		white
				left		0.6em
				z-index		10
				font-size	1.6em
	
		